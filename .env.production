# Eliano Webmail - Production Environment Configuration
# Copy this file to .env and update with your production values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=eliano_mail
DB_PASSWORD=sua_senha_mysql
DB_NAME=eliano_mail_production

# Application Configuration
NODE_ENV=production
PORT=5000
SESSION_SECRET=your_very_secure_session_secret_here_at_least_32_chars

# Email Server Configuration (SMTP/IMAP)
SMTP_HOST=mail.eliano.dev
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@eliano.dev
SMTP_PASS=smtp_password_123

IMAP_HOST=localhost
IMAP_PORT=993
IMAP_SECURE=true
IMAP_USER=noreply@eliano.dev
IMAP_PASS=smtp_password_123

# Domain Configuration
DOMAIN=eliano.dev
WEBMAIL_URL=https://mail.eliano.dev

# Storage Configuration
MAX_FILE_SIZE=10485760
MAX_STORAGE_PER_USER=104857600

# Security
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Optional: Rate Limiting
ENABLE_RATE_LIMITING=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000